
<div class="container">
  <h2>Produit recherché :</h2>
    <div class="product-card d-flex">
      <%= image_tag "#{@product.image_url}", class: "product-img" %>
      <div class="product-details">
        <h3><%= @product.title %></h3>
        <p><%= @product.brand %></p>
      </div>
    </div>

  <h2>Consignes de tri :</h2>
    <div class="sorting-card">
    </div>

  <h2>Options :</h2>
    <div class="add-favorites ml-3">
      <% @product.searches.each do |search| %>
        <% if search.favorite %>
          <p><%= link_to "<i class='fas fa-star' style='-webkit-column-rule: #FECB1D;-moz-column-rule: #FECB1D;-o-column-rule: #FECB1D;column-rule: #FECB1D;'></i>".html_safe, search_path(search), method: :patch, remote: true %>Favori</p>
        <% else %>
          <p id="star" class="btn-favorites"><%= link_to "<i class='fas fa-star'></i>".html_safe, search_path(search), method: :patch, remote: true %>Ajouter aux favoris</p>
        <% end %>
      <% end %>
    </div>
    <div class="add-map ml-3">
      <p><i class="fas fa-map-pin"></i> Où jeter ma bouteille en verre</p>
    </div>
</div>


